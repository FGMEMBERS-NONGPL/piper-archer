<?xml version="1.0"?>

<PropertyList>

  <fx>

    <engine>
      <name>engine</name>
      <mode>looped</mode>
      <path>Sounds/wasp.wav</path>
      <property>engines/engine[0]/running</property>
      <pitch>
	<property>engines/engine[0]/rpm</property>
	<factor>0.0004</factor>
	<min>0.3</min>
	<max>1000.0</max>
	<offset>0.1</offset>
      </pitch>
      <volume>
	<property>sim/current-view/internal</property>
	<factor>-0.25</factor>
	<offset>0.8</offset>
      </volume>
      <reference-dist>10.0</reference-dist>
      <max-dist>10000.0</max-dist>
    </engine>

    <engine>
      <name>cranking</name>
      <mode>looped</mode>
      <path>Sounds/cranking.wav</path>
      <condition>
        <and>
          <property>engines/engine[0]/cranking</property>
          <not>
            <property>engines/engine[0]/running</property>
          </not>
        </and>
      </condition>
      <volume>
	<property>sim/current-view/internal</property>
	<factor>-0.2</factor>
	<offset>0.7</offset>
      </volume>
      <reference-dist>10.0</reference-dist>
      <max-dist>10000.0</max-dist>
    </engine>

    <wind>
      <name>wind</name>
      <mode>looped</mode>
      <path>Sounds/wind.wav</path>
      <property>sim/current-view/internal</property>
      <volume>
	<property>velocities/airspeed-kt</property>
	<factor>0.001</factor>
	<min>0.01</min>
	<max>0.4</max>
      </volume>
    </wind>

    <rattle>
      <name>rattle</name>
      <mode>looped</mode>
      <path>Sounds/rattleroll.wav</path>
      <condition>
        <and>
          <or>
            <property>gear/gear[0]/wow</property>
            <property>gear/gear[1]/wow</property>
            <property>gear/gear[2]/wow</property>
          </or>
          <property>sim/current-view/internal</property>
        </and>
      </condition>
      <volume>
	<property>velocities/groundspeed-kt</property>
	<factor>0.02</factor>
	<min>0.01</min>
	<max>0.5</max>
      </volume>
    </rattle>

    <touchdown>
      <name>nose</name>
      <mode>once</mode>
      <path>Sounds/squeal.wav</path>
      <property>gear/gear[0]/wow</property>
      <volume>
	<property>velocities/groundspeed-kt</property>
	<factor>0.02</factor>
	<min>0.01</min>
	<max>0.5</max>
      </volume>
      <volume>
	<property>velocities/speed-down-fps</property>
	<factor>0.1</factor>
	<min>0.01</min>
	<max>0.5</max>
      </volume>
    </touchdown>

    <touchdown>
      <name>left</name>
      <mode>once</mode>
      <path>Sounds/squeal.wav</path>
      <property>gear/gear[0]/wow</property>
      <volume>
	<property>velocities/groundspeed-kt</property>
	<factor>0.02</factor>
	<min>0.01</min>
	<max>0.5</max>
      </volume>
      <volume>
	<property>velocities/speed-down-fps</property>
	<factor>0.1</factor>
	<min>0.01</min>
	<max>0.5</max>
      </volume>
    </touchdown>

    <touchdown>
      <name>right</name>
      <mode>once</mode>
      <path>Sounds/squeal.wav</path>
      <property>gear/gear[2]/wow</property>
      <volume>
	<property>velocities/groundspeed-kt</property>
	<factor>0.02</factor>
	<min>0.01</min>
	<max>0.5</max>
      </volume>
      <volume>
	<property>velocities/speed-down-fps</property>
	<factor>0.1</factor>
	<min>0.01</min>
	<max>0.5</max>
      </volume>
    </touchdown>

    <flaps>
      <name>flaps</name>
      <mode>in-transit</mode>
      <path>Sounds/flaps.wav</path>
      <property>surface-positions/flap-pos-norm</property>
      <volume>
	<property>sim/current-view/internal</property>
	<factor>-0.2</factor>
	<offset>0.5</offset>
      </volume>
    </flaps>

  </fx>
  
</PropertyList>
