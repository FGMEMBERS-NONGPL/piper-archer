<?xml version="1.0"?>

<PropertyList>

  <path>Instruments/fuel/fuel.ac</path>

  <animation>
    <type>material</type>
    <object-name>backplate left</object-name>
    <object-name>backplate right</object-name>
    <object-name>needle</object-name>
    <emission>
      <red>0.02</red>
      <green>0.015</green>
      <blue>0.005</blue>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/pa28-181/Models/Effects/glossy-black-plastic.png</texture>
    <object-name>case</object-name>
  </animation>

  <animation>
    <type>select</type>
    <condition>
      <value>false</value>
    </condition>
    <object-name>backplate left</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>consumables/fuel/tank[1]/level-gal_us</property>
    <interpolation>
      <entry>
        <ind>   0</ind>
        <dep> -35</dep>
      </entry>
      <entry>
        <ind>  28</ind>
        <dep>  35</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>-0.02</x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.0 </z-m>
    </center>
    <axis>
      <x> 0.0</x>
      <y> 0.0</y>
      <z>-1.0</z>
    </axis>
  </animation>

</PropertyList>
