<?xml version="1.0"?>

<PropertyList>

  <path>Instruments/attitude/attitude.ac</path>

  <animation>
    <type>material</type>
    <object-name>horizon</object-name>
    <object-name>airplane</object-name>
    <object-name>roll ring</object-name>
    <object-name>misc</object-name>
    <emission>
      <red>0.02</red>
      <green>0.015</green>
      <blue>0.005</blue>
      <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/pa28-181/Models/Effects/glossy-black-plastic.png</texture>
    <object-name>case</object-name>
    <object-name>horizon offset knob</object-name>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>horizon offset knob</object-name>
    <drag-direction>vertical</drag-direction>

    <action>
      <binding>
	<command>property-adjust</command>
        <property>instrumentation/attitude-indicator/horizon-offset-deg</property>
	<factor>0.1</factor>
	<wrap>false</wrap>
      </binding>
    </action>

    <hovered>
      <binding>
	<command>set-tooltip</command>
	<tooltip-id>attitude-pitch-offset</tooltip-id>
	<label>Attitude indicator pitch offset: %d degrees</label>
	<mapping>numeric</mapping>
        <property>instrumentation/attitude-indicator/horizon-offset-deg</property>
      </binding>
    </hovered>

  </animation>

  <animation>
    <type>translate</type>
    <object-name>airplane</object-name>
    <property>instrumentation/attitude-indicator/horizon-offset-deg</property>
    <factor>0.0009</factor>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>horizon</object-name>
    <property>instrumentation/attitude-indicator/indicated-pitch-deg</property>
    <factor>-0.0008</factor>
    <min-m>-0.01</min-m>
    <max-m>0.01</max-m>
    <axis>
      <x>1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>horizon</object-name>
    <property>instrumentation/attitude-indicator/indicated-roll-deg</property>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>roll ring</object-name>
    <property>instrumentation/attitude-indicator/indicated-roll-deg</property>
    <factor>1</factor>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>

</PropertyList>
