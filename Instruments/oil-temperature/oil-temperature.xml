<?xml version="1.0"?>

<PropertyList>

  <path>Instruments/oil-pressure/oil-pressure.ac</path>

  <animation>
    <type>material</type>
    <object-name>backplate</object-name>
    <object-name>needle</object-name>
    <emission>
      <red>0.2</red>
      <green>0.15</green>
      <blue>0.05</blue>
      <factor-prop>electrical/outputs/panel-lights/brightness</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <property>engines/engine[0]/oil-temperature-degf</property>
    <interpolation>
      <entry>
        <ind>  75</ind>
        <dep> -35</dep>
      </entry>
      <entry>
        <ind> 285</ind>
        <dep>  35</dep>
      </entry>
    </interpolation>
    <center>
      <x-m>-0.02</x-m>
      <y-m> 0.0 </y-m>
      <z-m> 0.0 </z-m>
    </center>
    <axis>
      <x> 0.0</x>
      <y> 0.0</y>
      <z>-1.0</z>
    </axis>
  </animation>

</PropertyList>
