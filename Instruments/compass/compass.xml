<?xml version="1.0"?>

<PropertyList>

  <path>Instruments/compass/compass.ac</path>

  <animation>
    <type>material</type>
    <object-name>legend</object-name>
    <object-name>bug</object-name>
    <object-name>airplane</object-name>
    <emission>
      <red>0.2</red>
      <green>0.15</green>
      <blue>0.05</blue>
      <factor-prop>electrical/outputs/panel-lights/brightness</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/pa28-181/Models/Effects/glossy-black-plastic.png</texture>
    <object-name>case</object-name>
    <object-name>heading bug knob</object-name>
    <object-name>?? knob</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>legend</object-name>
    <object-name>heading bug</object-name>
    <property>instrumentation/heading-indicator/indicated-heading-deg</property>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>heading bug</object-name>
    <property>autopilot/settings/heading-bug-deg</property>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
  </animation>

  <animation>
    <type>knob</type>
    <object-name>heading bug knob</object-name>

    <action>
      <binding>
	<command>property-adjust</command>
        <property>autopilot/settings/heading-bug-deg</property>
	<factor>2</factor>
	<wrap>true</wrap>
      </binding>
    </action>

    <hovered>
      <binding>
	<command>set-tooltip</command>
	<tooltip-id>heading-bug</tooltip-id>
	<label>Heading bug: %d degrees</label>
	<mapping>numeric</mapping>
        <property>autopilot/settings/heading-bug-deg</property>
      </binding>
    </hovered>

  </animation>

</PropertyList>
