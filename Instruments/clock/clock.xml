<?xml version="1.0"?>

<PropertyList>

  <path>Instruments/clock/clock.ac</path>

  <animation>
    <type>material</type>
    <object-name>legend</object-name>
    <object-name>hour hand</object-name>
    <object-name>minute hand</object-name>
    <object-name>second hand</object-name>
    <emission>
      <red>0.2</red>
      <green>0.15</green>
      <blue>0.05</blue>
      <factor-prop>electrical/outputs/panel-lights/brightness</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/pa28-181/Models/Effects/glossy-black-plastic.png</texture>
    <object-name>case</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>second hand</object-name>
    <property>/sim/time/utc/day-seconds</property>
    <factor>6</factor>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>minute hand</object-name>
    <property>/sim/time/utc/day-seconds</property>
    <factor>0.1</factor>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>hour hand</object-name>
    <property>/sim/time/utc/day-seconds</property>
    <factor>0.008333</factor>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
  </animation>

</PropertyList>
