<?xml version="1.0"?>

<PropertyList>

  <path>Instruments/bank/bank.ac</path>

  <animation>
    <type>material</type>
    <object-name>legend</object-name>
    <object-name>airplane</object-name>
    <object-name>ball</object-name>
    <!--    <object-name>tas legend</object-name>-->
    <emission>
      <red>0.2</red>
      <green>0.15</green>
      <blue>0.05</blue>
      <factor-prop>electrical/outputs/panel-lights/brightness</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Models/Effects/glossy-black-plastic.png</texture>
    <object-name>case</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>airplane</object-name>
    <property>/instrumentation/turn-indicator/indicated-turn-rate</property>
    <factor>20.0</factor>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>ball</object-name>
    <property>/instrumentation/slip-skid-ball/indicated-slip-skid</property>
    <factor>5.729</factor>
    <min-deg>-8</min-deg>
    <max-deg>8</max-deg>
    <center>
      <x-m>0.08</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>-1</z>
    </axis>
 </animation>

</PropertyList>
