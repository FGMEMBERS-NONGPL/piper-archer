<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <default>
    <menu n="10">
      
      <label>Piper Archer</label>
      <enabled type="bool">true</enabled>
      
      <item>
        <name>autostart</name>
        <label>Autostart</label>
        <binding>
          <command>nasal</command>
          <script>piper_archer.autostart()</script>
        </binding>
      </item>

      <item>
        <name>select-livery</name>
        <label>Select livery</label>
        <binding>
          <command>nasal</command>
          <script>aircraft.livery.dialog.toggle()</script>
        </binding>
      </item>

      <item>
        <name>toggle-shadows</name>
        <label>Toggle shadows</label>
        <binding>
          <command>property-toggle</command>
          <property>/options/shadow</property>
        </binding>
      </item>
      
    </menu>
  </default>

</PropertyList>

